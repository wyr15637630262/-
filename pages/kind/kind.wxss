/* pages/kind/kind.wxss */
.wrap{
  background: #efefef;
}
.wrap-content{
  width: 100%;
  height: 1400rpx;
  overflow: auto;
  background: #efefef;
}
.data-one{
  width: 100%;
  height: 500rpx;
  background: #ffffff;
}
.data-title{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
}
.data-image{
  width: 100%;
  height: 350rpx;
}

/*滑块样式*/
.recommend_scroll_x_box {
  height: 350rpx;
  width: auto;
  white-space: nowrap;
}
.recommend_scroll_x_box::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box {
  width: 230rpx;
  height: 350rpx;
  margin-right: 24rpx;
  display: inline-block;
  text-align: center;
}

.recommend_hot_image {
  width: 230rpx;
  height: 150rpx;
  margin-top: 70rpx;
}